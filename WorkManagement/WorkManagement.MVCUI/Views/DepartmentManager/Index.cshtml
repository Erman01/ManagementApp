@model IEnumerable<WorkManagement.Core.Models.Department>

@{
    ViewBag.Title = "Index";
}

<h2>Department List</h2>

<p>
    @Html.ActionLink("Create a New Department", "Create",null,new {@class="btn btn-primary" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.DepartmentName)
    </td>
    <td>
        @item.CreatedAt.ToString("dd.MM.yyyy")
    </td>
    <td>
        @Html.ActionLink("Details", "Details", new { id = item.DepartmentId }, new { @class = "btn btn-default" }) |
        @Html.ActionLink("Edit", "Edit", new { id = item.DepartmentId }, new { @class = "btn btn-warning" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.DepartmentId }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
