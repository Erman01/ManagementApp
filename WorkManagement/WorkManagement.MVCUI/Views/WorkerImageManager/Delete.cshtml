@model WorkManagement.Core.Models.WorkerImage

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this Image?</h2>

<hr />
<div class="col-md-12">
    <div class="col-md-3">
        <div class="col-md-12">
            <img class="img-responsive" style="height:250px" src="~/Content/Images/@Model.ImageUrl" />
        </div>
    </div>
    <div class="col-md-9">
        <div class="col-md-12">
            <h4>Image Name : @Model.ImageName</h4>
        </div>

        <div class="col-md-12">
            <h4>Gallery Name : @Model.WorkerGallery.GalleryName</h4>
        </div>

        <div class="col-md-12">
            <h4>Created At : @Model.CreatedAt.ToString("dd.MM.yyyy")</h4>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" }) |
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        }
    </div>
</div>