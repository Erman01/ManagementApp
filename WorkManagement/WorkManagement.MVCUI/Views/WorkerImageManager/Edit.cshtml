@model WorkManagement.Core.ViewModels.WorkerImageViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit This Image</h2>


@using (Html.BeginForm("Edit", "WorkerImageManager", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.WorkerImage.WorkerImageId)

        <div class="col-md-9">
            <div class="form-group">
                @Html.LabelFor(model => model.WorkerImage.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <img class="img-responsive" style="height:250px" src="~/Content/Images/@Model.WorkerImage.ImageUrl" />
                    <input type="file" name="file" id="file" class="form-control" />
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="form-group">
                @Html.LabelFor(model => model.WorkerImage.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WorkerImage.ImageName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.WorkerImage.ImageName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.WorkerImage.WorkerImageGalleryId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.WorkerImage.WorkerImageGalleryId, new SelectList(Model.WorkerGalleries, "WorkerImageGalleryId", "GalleryName"), new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" }) |
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
 
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
