@model WorkManagement.Core.Models.Worker

@{
    ViewBag.Title = "Delete";
}

    <br />

<h3>Are you sure you want to delete this worker?</h3>
<div class="col-md-3">
    <div class="col-md-12">
        <img class="img-responsive" style="height:250px;" src="~/Content/WorkerProfileImages/@Model.WorkerImageUrl" />
    </div>
</div>
<div class="col-md-9">
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Start Date
        </dt>

        <dd>
           @Model.CreatedAt.ToString("dd.MM.yyyy")
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </dt>

        <dd>
          @Model.Department.DepartmentName
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Salary)
        </dt>

        <dd>
           @String.Format("{0:c}",Model.Salary)
        </dd>

        <dt>
            Date Of Birth
        </dt>

        <dd>
            @Model.DateOfBirth.ToString("dd.MM.yyyy")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
         @(Model.Gender==true?"Male":"Female")
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "Index") |
    <input type="submit" value="Delete" class="btn btn-danger" />
</div>
    }
</div>
